  "openclaw_config": {
    "mcpServers": {
      "crawl4ai": {
        "url": "http://localhost:3000",
        "enabled": true
      },
      "notion": {
        "url": "http://localhost:3001", 
        "enabled": true
      },
      "email": {
        "url": "http://localhost:3002",
        "enabled": true
      },
      "business-ops": {
        "url": "http://localhost:3003",
        "enabled": true
      },
      "research-analysis": {
        "url": "http://localhost:3004",
        "enabled": true
      }
    },
    "tools": {
      "allow": [
        "crawl4ai:*",
        "notion:*", 
        "email:*",
        "business-ops:*",
